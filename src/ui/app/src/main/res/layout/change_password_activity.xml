<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.ChangePasswordActivity"
    >

    <com.polkadot.bt.custom.AppToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/change_password" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_pwd"
        android:layout_marginTop="27dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etPwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:textColor="@color/primary_text_color"
            android:hint="@string/plz_set_pwd"/>
        <ImageView
            android:id="@+id/ivPwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/view_selector"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colore"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/tvPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pwd_rule"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="10sp"
        android:textColor="@color/color9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repwd"
        android:layout_marginTop="27dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etRepwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:inputType="textPassword"
            android:maxLength="16"
            android:background="@null"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:textColor="@color/primary_text_color"
            android:hint="@string/plz_repwd"/>
        <ImageView
            android:id="@+id/ivRepwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/view_selector"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colore"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/tvRepwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/entered_pwd_differ"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="10sp"
        android:textColor="@color/color_tips"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/change_password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_selector"
        android:enabled="false"/>
</LinearLayout>