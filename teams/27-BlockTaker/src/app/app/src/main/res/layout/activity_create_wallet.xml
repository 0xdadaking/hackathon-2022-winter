<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.create.CreateWalletActivity">

    <include
        android:id="@+id/baseTitle"
        layout="@layout/base_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_name"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:textColor="@color/primary_text_color"
            android:hint="@string/input_wallet_name"/>
        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingHorizontal="10dp"
            android:src="@drawable/create_clear"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colore"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_length"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="10sp"
        android:textColor="@color/color9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_pwd"
        android:layout_marginTop="27dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etPwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:textColor="@color/primary_text_color"
            android:hint="@string/plz_set_pwd"/>
        <ImageView
            android:id="@+id/ivPwd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/view_selector"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colore"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/tvPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pwd_rule"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="10sp"
        android:textColor="@color/color9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repwd"
        android:layout_marginTop="27dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etRepwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:inputType="textPassword"
            android:maxLength="16"
            android:background="@null"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:textColor="@color/primary_text_color"
            android:hint="@string/plz_repwd"/>
        <ImageView
            android:id="@+id/ivRepwd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/view_selector"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colore"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/tvRepwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/entered_pwd_differ"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="10sp"
        android:textColor="@color/color_tips"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="7dp">
        <CheckBox
            android:id="@+id/cbAgree"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:drawableTint="@color/checkbox_color2"
            android:checked="true"/>
        <TextView
            android:id="@+id/tvAgree0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_agree1"
            android:textSize="12sp"
            android:textColor="@color/color3"/>

<!--        <TextView-->
        <!--            android:id="@+id/tvAgree"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:text="@string/create_agree2"-->
        <!--            android:visibility="gone"-->
        <!--            android:textColor="@color/indicator"-->
        <!--            android:textSize="12sp"-->
        <!--            android:textStyle="bold" />-->
    </LinearLayout>
    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/create"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_selector"
        android:enabled="false"/>
</LinearLayout>