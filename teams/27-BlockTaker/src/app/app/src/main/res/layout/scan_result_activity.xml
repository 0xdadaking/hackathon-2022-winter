<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.polkadot.bt.custom.AppToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/scan_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15sp"
        android:text="@string/scan_to_identify_content"
        android:textColor="#FF656569"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_1b1b1c_corner_5_bg"
        android:backgroundTint="#FFEEEEEE"
        android:minHeight="120dp"
        android:padding="20dp"
        android:textColor="@color/colorTitle"
        android:textSize="13sp"
        tools:text="0449313cc5ca2dce29116a325a5dddef3bbc53424150e51cd7acea3692c19e82" />

    <TextView
        android:id="@+id/copy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_1b1b1c_corner_5_bg"
        android:gravity="center"
        android:text="@string/copy"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>