<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_value"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corners6_primary"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="40px"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.polkadot.bt.ui.view.CircleImageView
            android:id="@+id/circle_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/item_value"/>
        <TextView
            android:id="@+id/tv_value_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="7dp"
            android:text="多链钱包"
            />
        <TextView
            android:id="@+id/tv_value_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="7dp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/brrow_right_write"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/vaue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:textSize="16sp"
        android:text="钱包名称ABCD"
        android:textColor="@color/white"
        />

</LinearLayout>