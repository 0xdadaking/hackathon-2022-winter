<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.init.MetaInitActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/ivTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,75:56" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/color6"
        android:text="@string/meta_desc1"
        android:layout_marginHorizontal="30dp"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/color6"
        android:text="@string/meta_desc2"
        android:layout_marginHorizontal="30dp"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llCreate"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="15dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:elevation="7dp"
            tools:ignore="NestedWeights">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/meta_create"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/primary_text_color"
                android:textStyle="bold"
                android:text="@string/meta_create"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llImport"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:elevation="7dp"
            android:layout_marginStart="20dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/meta_import"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/primary_text_color"
                android:textStyle="bold"
                android:text="@string/meta_import"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvJump"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/color6"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/jump"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="45dp"/>

</LinearLayout>